---
import "../pages/style.css";
const title = Astro.props.title;
const img = Astro.props.img;
---

<header>
  <div class="header_indhold">
    <a href="/"><img id="logo" src="/kune_logo_white.png" alt="Kune Festival Logo" /></a>
    <nav>
      <ul>
        <li><a class="header_text" href="/lineup">LINEUP</a></li>
        <li><a class="header_text" href="/about">ABOUT</a></li>
        <li><a class="header_text knap" href="/tickets">TICKETS</a></li>
      </ul>
    </nav>
  </div>
  <h1 class="header_title">{title}</h1>
</header>

<style>
  .header_indhold {
    padding: 20px;
    display: flex;
    align-items: center;
  }
  .header_title {
    font-size: 15rem;
    text-align: center;
    margin-top: 30px;
    margin-bottom: 130px;
  }
  ul {
    display: flex;
    gap: 50px;
    justify-content: end;
  }
  li {
    list-style: none;
  }
  a {
    text-decoration: none;
  }
  #logo,
  nav {
    flex: 1;
  }
  #logo {
    width: 15%;
  }
</style>
