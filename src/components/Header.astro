---
import "../pages/style.css";
---

<header>
  <a href="/"><img id="logo" src="/kune_logo_white.png" alt="Kune Festival Logo" /></a>
  <nav>
    <ul>
      <li><a href="/lineup">LINEUP</a></li>
      <li><a href="/about">ABOUT</a></li>
      <li><a class="knap" href="/tickets">TICKETS</a></li>
    </ul>
  </nav>
</header>

<style>
  header {
    display: flex;
    align-items: center;
    background-image: url(../../public/header_lineup.webp);
    background-size: cover;
    width: 1920px;
    height: 480px;
  }
  ul {
    display: flex;
    gap: 50px;
    justify-content: end;
  }
  li {
    list-style: none;
  }
  a {
    text-decoration: none;
  }
  #logo,
  nav {
    flex: 1;
  }
  #logo {
    width: 15%;
  }
</style>
